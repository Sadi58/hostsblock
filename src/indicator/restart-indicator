#!/bin/bash
process_status=$(ps x | grep -v grep | grep -c "/usr/local/indicator-hostsblock/indicator-hostsblock")
if [ "$process_status" -gt 0 ]
then
	pkill -f "python /usr/local/indicator-hostsblock/indicator-hostsblock"
	python /usr/local/indicator-hostsblock/indicator-hostsblock
else
	echo "indicator not running, nothing to do"
fi
